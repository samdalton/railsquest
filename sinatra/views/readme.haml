- @page_title = "Readme for #{@quest.name}"

%style{:type => "text/css"}
  :sass
    #readme
      :clear both
      :background-color white
      :-webkit-border-radius 10px
      :-moz-border-radius 10px
      :padding 7px 10px
      :margin 10px 0
      :position relative
      :border 4px solid #ff0
      :font-size 75%
      :line-height 1.3em
      
      > *
        :margin-left 10px
        :margin-right 10px
        
    .return
      :float right
      a
        :color #000
        
    body > h2
      :margin-left 12px
      
    body > h2, .return a
      :color #980
      
    code
      :background-color #fff
      :font-size 12px
      :color #666
  
%p.return
  %a{:href => "/"} Return to quests

%h2
  Readme for
  = @quest.name

#readme
  - if @rendered_readme
    :preserve
      #{@rendered_readme}
  - else
    %pre
      :preserve
        #{@plain_readme}

